<section>

  <div class="row">

    <div class="col-lg-8">

      <div class="card wish-list mb-3">
        <div class="card-body">

          <h5 class="mb-4">Cart (<span><%= cart.size %></span> items)</h5>

          <% if cart.present? %>
            <% cart.each do |card| %>

              <div class="row mb-4">
                <div class="col-md-5 col-lg-3 col-xl-3">
                  <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                    <img class="img-fluid w-100"
                      src=<%= card.image_thumbnail %> alt=<%= card.name %>>
                  </div>
                </div>
                <div class="col-md-7 col-lg-9 col-xl-9">
                  <div>
                    <div class="d-flex justify-content-between">
                      <div>
                        <h5><%= card.name %></h5>
                        <p class="mb-3 text-muted text-uppercase small">Rarity: <%= card.rarity.rarity_name %></p>
                        <p class="mb-3 text-muted text-uppercase small">Type:
                          <%card.types.each do |type|%>
                            <%= type.type_name %>
                          <% end %>
                        </p>
                      </div>
                      <div>
                        <div class="def-number-input number-input safari_only mb-0 w-100">
                          <button onclick="this.parentNode.querySelector('input[type=number]').stepDown()"
                            class="minus"></button>
                          <input class="quantity" min="0" name="quantity" value="1" type="number">
                          <button onclick="this.parentNode.querySelector('input[type=number]').stepUp()"
                            class="plus"></button>
                        </div>
                      </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                      <p class="mb-3"><span><strong>$<%= card.price %></strong></span></p>
                      <%= link_to 'Remove', cart_path(card), method: :delete, :class => "btn btn-danger btn-rounded mr-1"%>
                    </div>
                  </div>
                </div>
              </div>
              <hr class="mb-4">

            <% end %>
          <% end %>

        </div>
      </div>
    </div>

    <div class="col-lg-4">

      <div class="card mb-3">
        <div class="card-body">

          <h5 class="mb-3">Total</h5>

          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
              Total Amount Before Taxes
              <span>$0</span>
            </li>
            <li>
              <hr class="mb-1">
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
              <div>
                <strong>Total Amount After Taxes</strong>
              </div>
              <span><strong>$0</strong></span>
            </li>
          </ul>

          <button type="button" class="btn btn-primary btn-block waves-effect waves-light">go to checkout</button>

        </div>
      </div>

    </div>

  </div>
</section>